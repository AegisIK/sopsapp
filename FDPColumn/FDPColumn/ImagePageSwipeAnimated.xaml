<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FDPColumn.ImagePageSwipeAnimated"
             xmlns:local="clr-namespace:FDPColumn">
    <ContentPage.Content>
        <ScrollView Orientation="Vertical">
            <StackLayout>
                <!--<StackLayout>
                    <Label x:Name="header"/>
                </StackLayout>-->
                <StackLayout>
                    <ScrollView x:Name="view1">
                        <local:PinchAndPanContainer x:Name="container">
                            <local:PinchAndPanContainer.Content>
                                <Image x:Name="image1"/>
                            </local:PinchAndPanContainer.Content>
                        </local:PinchAndPanContainer>
                    </ScrollView>
                    <ScrollView x:Name="view2" TranslationX="1000" TranslationY="0">
                        <local:PinchAndPanContainer>
                            <local:PinchAndPanContainer.Content>
                                <Image x:Name="image2"/>
                            </local:PinchAndPanContainer.Content>
                        </local:PinchAndPanContainer>
                    </ScrollView>
                </StackLayout>


            </StackLayout>
        </ScrollView>
        

    </ContentPage.Content>
</ContentPage>